@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Boat.jpg" alt="Woodcarving boat" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:black;position:relative;left:220px">     
                    Woodcarving boat
                    <a class="btn btn-default" href="#" style="position:relative;left:70px">
                        Buy Now
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Dolls.jpeg" alt="Doll Set" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:black;position:relative;left:220px">
                    Doll Set
                    <a class="btn btn-default" style="position:relative;left:70px" href="#">
                        Buy Now
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Jade.jpg" alt="Jade Necklace" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:black;position:relative;top: -100px;left:250px">
                    Jade Necklace
                    <a class="btn btn-default" style="position:relative;left:40px" href="#">
                        Buy Now
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/PostCard.jpg" alt="Postcard" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:black;position:relative;left:50px">
                    Postcard
                    <a class="btn btn-default" style="position:relative;left:20px" href="#">
                        Buy Now
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

